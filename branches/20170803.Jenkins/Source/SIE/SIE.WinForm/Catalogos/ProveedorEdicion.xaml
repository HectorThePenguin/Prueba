                                              Margin="10,0,0,0"
                                              Grid.Row="0"
                                              Unchecked="CheckBoxRetenciones_OnChecked"
                                              Checked="CheckBoxRetenciones_OnChecked"
                                              VerticalAlignment="Center"
                                              Grid.Column="0"></CheckBox>

                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Margin="25,0,0,0"
                                           Content="{x:Static resx:Resources.ProveedorEdicion_lblRetencion}">
                                    </Label>

                                    <ComboBox x:Name="cboRetencionISR"
                                              Grid.Row="0"
                                              Grid.Column="1"
                                              IsEnabled="False"
                                              DisplayMemberPath="DescripcionRetencion"
                                              SelectedValuePath="RetencionID"
                                              SelectedItem="{Binding Path=RetencionISR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValue="{Binding Path=RetencionISR.RetencionID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                                    <CheckBox Name="ckbRetencionIVA"
                                              Margin="10,0,0,0"
                                              Grid.Row="1"
                                              Unchecked="CheckBoxRetenciones_OnChecked"
                                              Checked="CheckBoxRetenciones_OnChecked"
                                              VerticalAlignment="Center"
                                              Grid.Column="0"></CheckBox>

                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Margin="25,0,0,0"
                                           Content="{x:Static resx:Resources.ProveedorEdicion_lblRetencionIva}">
                                    </Label>

                                    <ComboBox x:Name="cboRetencionIVA"
                                              Grid.Row="1"
                                              Grid.Column="1"
                                              IsEnabled ="False"
                                              DisplayMemberPath="DescripcionRetencion"
                                              SelectedValuePath="RetencionID"
                                              SelectedItem="{Binding Path=RetencionIVA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValue="{Binding Path=RetencionIVA.RetencionID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                    <CheckBox Name="ckbIVA"
                                              Margin="10,0,0,0"
                                              Grid.Row="2"
                                              Unchecked="CheckBoxRetenciones_OnChecked"
                                              Checked="CheckBoxRetenciones_OnChecked"
                                              VerticalAlignment="Center"
                                              Grid.Column="0"></CheckBox>

                                    <Label Grid.Row="2"
                                           Grid.Column="0"
                                           Margin="25,0,0,0"
