                                   Margin="0 25 0 0"
                                   FontSize="16"/>
                            <Button Name="btnActualizarTemperatura" ToolTip="{x:Static resx:Resources.CorteGanado_Tt_btnActualizarTemperatura}" Width="32" Height="32"  Click="btnActualizarTemperatura_Click" HorizontalAlignment="Left" Margin="10,10,10,10" Background="White" IsEnabled="false">
                                <Image
                    	HorizontalAlignment="Left"
                    	Width="25"
                    	Height="25"
                    	Source="../Imagenes/updatered.ico"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    Margin="0,0,30,20"
                    Height="Auto"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Grid.Row="3">
            <Button Name="btnGuardar"
                    TabIndex="16"
                    Margin="0 0 10 0"
                    Click="btnGuardar_Click"
                    Content="{x:Static resx:Resources.btnGuardar}" />
            <Button Name="btnCancelar"
                    TabIndex="17"
                    IsTabStop="true"
                    Click="btnCancelar_Click"
                    LostFocus="btnCancelar_LostFocus"
                    Content="{x:Static resx:Resources.btnCancelar}" />
            <Image gif:ImageBehavior.AnimatedSource="../Recursos/Image/loading.gif"
                   Name="imgloading"
                   HorizontalAlignment="Left"
                   Margin="10 0 0 0"
                   Visibility="Hidden"
                   ToolTip="{x:Static resx:Resources.Espere}" />
        </StackPanel>
    </Grid>

</UserControl>
