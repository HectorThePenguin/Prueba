                    	Height="25"
                    	Source="../Imagenes/updatered.ico"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="0"
                          Header="{x:Static resx:Resources.CorteGanado_gpb7Titulo}"
                          Style="{StaticResource groupBox}"
                          Name="DisplayTemperatura"
                          Width="Auto"
                          Height="Auto"
                          Grid.Row="2">
                    <Grid>
                        <StackPanel Grid.Column="0"
                                    Grid.Row="0"
                                    Orientation="Horizontal">
                            <TextBox Name="txtDisplayTemperatura"
                                     IsReadOnly="True"
                                     Height="Auto"
                                     FontSize="34"
                                     Background="Black"
                                     Foreground="Red"
                                     TextAlignment="Right"
                                     IsTabStop="False"
                                     Focusable="False"
                                     Width="216" />
                            <Label x:Name="lblTemperaturaDisplay"
                                   Content="{x:Static resx:Resources.CorteGanado_lblCo}"
