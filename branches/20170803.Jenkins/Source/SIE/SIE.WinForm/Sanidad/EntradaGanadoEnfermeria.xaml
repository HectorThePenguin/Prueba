                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100*"/>
                </Grid.ColumnDefinitions>
                <Label
                       Content="*"
                       x:Name="LblNoPartidasRequerido"
                       Style="{StaticResource labelRequerido}" Margin="-8,3,8,0"/>
                <Label Name="lblNoPartidas" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosGeneralesNoPartida}" 
                       Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,3,0,25" Height="Auto" Grid.RowSpan="2"/>
                <TextBox x:Name="txtNoPartida" 
                	MaxLength="15" 
                    TabIndex="1" 
                	Width="Auto" 
                	Grid.Column="1" 
                	Grid.Row="0" 
