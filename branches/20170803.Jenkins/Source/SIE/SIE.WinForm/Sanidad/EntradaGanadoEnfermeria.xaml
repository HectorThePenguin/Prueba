                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosGeneralesCalidad}" 
                       Grid.Row="4" 
                       Grid.Column="0" Margin="0,1" Grid.ColumnSpan="2" Height="Auto" />
                <ComboBox Name="cboCalidad" 
                          TabIndex="4" 
                          Grid.Column="1" 
                          Grid.Row="4" 
                          SelectedValuePath="CalidadGanadoID"
                          DisplayMemberPath="Descripcion" 
                          ItemsSource="{Binding}" 
                          SelectedIndex="0" 
                          IsSynchronizedWithCurrentItem="True" 
                           Height="Auto" Margin="0,2,5,2"
                          />
                <Label Name="lblDiasAlta" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosGeneralesDiasAlta}" 
                       Grid.Row="5" 
                       Grid.Column="0" 
                       Margin="0,1,0,0" 
                       Grid.ColumnSpan="2" 
                       Height="Auto" />
                <TextBox Name="txtDiasAlta"
