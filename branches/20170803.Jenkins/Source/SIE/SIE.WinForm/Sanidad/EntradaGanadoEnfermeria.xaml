                        <Label.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                        </Label.Resources>
                    </Label>
                    <ComboBox Name="cboGradoEnfermedad" 
                          Grid.Column="1" 
                          Grid.Row="1" 
                          TabIndex="9"
                          SelectedValuePath="GradoID"
