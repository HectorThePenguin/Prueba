                          Grid.Row="0" 
                          ItemsSource="{Binding}" 
                          DisplayMemberPath="NombreCompleto" 
                          SelectedValuePath="OperadorID" 
                          Margin="68,12,11,5" 
                          Height="Auto"
                          IsEnabled="False" Grid.ColumnSpan="2"/>
                <!--<Button Name="btnTratamientos" 
