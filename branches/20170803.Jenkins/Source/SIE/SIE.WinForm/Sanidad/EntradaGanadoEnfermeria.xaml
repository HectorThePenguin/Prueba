                         KeyDown="txtNoIndividual_KeyDown"
                         KeyUp="txtNoIndividual_KeyUp" 
                         TextChanged="txtNoIndividual_TextChanged" 
                         PreviewKeyDown="txtNoIndividual_PreviewKeyDown"
