                       HorizontalAlignment="Right" 
                       Margin="0,0,0,0" 
                       Width="19" 
                       Source="../Imagenes/buscar.ico" MouseDown="imgBuscar_MouseDown"/>
                
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="*"
                       x:Name="LblIndividualRequerido"
                       Style="{StaticResource labelRequerido}" 
                       Margin="-6,0,5,0"></Label>
                <Label Name="lblNoIndividual" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosGeneralesNoIndividual}" 
                       Grid.Column="0" 
                       Grid.Row="1" 
                       Grid.ColumnSpan="2" Height="Auto" Margin="0,1"/>
