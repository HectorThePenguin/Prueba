        <GroupBox Grid.Row="1" 
                  Header="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDeteccion}" 
                  Height="235" 
                  HorizontalAlignment="Stretch" 
                  Margin="3,6,0,0" 
