                          Width="280"
                          Grid.Row="1" 
                          IsTabStop="true"
                          HorizontalAlignment="Center"
                          ItemsSource="{Binding Path=TratamientoInfo}"
                          Margin="2,0,15,10" Grid.Column="0"
