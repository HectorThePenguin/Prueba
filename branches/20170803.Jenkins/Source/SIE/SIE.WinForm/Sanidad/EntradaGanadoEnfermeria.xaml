                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosGeneralesHoraDeteccion}" 
                       Margin="0,2,0,1" Grid.ColumnSpan="2" Grid.Column="0" Height="Auto" />

