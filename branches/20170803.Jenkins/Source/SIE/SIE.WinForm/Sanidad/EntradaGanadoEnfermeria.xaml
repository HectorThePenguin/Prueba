                         TabIndex="5" 
                         Grid.Column="1" 
                         Grid.Row="5" 
                         Width="Auto" 
                         HorizontalAlignment="Stretch" 
                         Height="Auto" 
                         Margin="0,3,5,4" />
                <Label
