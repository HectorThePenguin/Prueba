                    <CheckBox Name="ckbDiagnosticoAnalista" 
                          TabIndex="18"  
                          Grid.Column="1" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Center"
                          Checked="ckbDiagnosticoAnalista_Checked" 
                              Unchecked="ckbDiagnosticoAnalista_Unchecked"
                           />
                    
                    <Label Name="lblDiagnostico" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosClinicoChkDiagnostico}" 
                       Grid.Column="1"  Height="Auto" Margin="10,-10,0,-17">
                        <Label.Resources>
