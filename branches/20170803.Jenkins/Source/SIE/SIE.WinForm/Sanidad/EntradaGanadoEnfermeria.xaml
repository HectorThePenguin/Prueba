                       Content="*"
                       x:Name="lblTemperaturaRequerido"
                       Grid.Row="3"
                       Style="{StaticResource labelRequerido}" Margin="-6,5,6,0" />
                <Label Name="lblTemperatura" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosClinicoTemperatura}" 
                       Grid.Column="0" 
                       Grid.Row="3"  Height="Auto"/>
                <TextBox Name="txtTemperatura"
                         MaxLength="4" 
                         TabIndex="11" 
                         Grid.Column="1" 
                         Grid.Row="3" 
                         Width="Auto" 
                         Margin="0,0,5,0"
                         HorizontalAlignment="Stretch" 
                         PreviewTextInput="TxtTemperatura_OnPreviewTextInput"
                         PreviewKeyDown="TxtTemperatura_OnPreviewKeyDown"/>

                <Label
                       Grid.Column="0"
                       Content="*"
                       x:Name="lblTipoGanadoRequerido"
                       Grid.Row="4"
                       Style="{StaticResource labelRequerido}" Margin="-6,5,6,0" />
                <Label Name="lblTipoGanado" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosClinicoTipoGanado}" 
                       Grid.Column="0" 
                       Grid.Row="4"  Height="Auto"/>
                <ComboBox Name="cboTipoGanado" 
                          Grid.Column="1" 
                          Grid.Row="4" 
                          TabIndex="12"
                          ItemsSource="{Binding}" 
                          SelectedValuePath="TipoGanadoID"
                          DisplayMemberPath="Descripcion"
                          Margin="0,2,5,2"
                          FontFamily="Arial Narrow" Height="Auto"/>

                <Label
                       Content="*"
                       Grid.Column="0"
                       x:Name="lblClasificacionRequerido"
                       Grid.Row="5"
                       Style="{StaticResource labelRequerido}" Margin="-6,5,6,0" />
                <Label Name="lblClasificacion" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosClinicoClasificacion}" 
                       Grid.Column="0" 
                       Grid.Row="5"  Height="Auto"/>
                <ComboBox Name="cboClasificacion" 
                          Grid.Column="1" 
                          Grid.Row="5" 
                          TabIndex="13"
                          ItemsSource="{Binding}" 
                          SelectedValuePath="ClasificacionGanadoID"
                          DisplayMemberPath="Descripcion"
                          Margin="0,2,5,2"
                          FontFamily="Arial Narrow" Height="Auto"/>

                <Label Name="lblCorralOrigen" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosClinicoCorralOrigen}" 
                       Grid.Column="0" 
                       Grid.Row="6"  Height="Auto"/>
