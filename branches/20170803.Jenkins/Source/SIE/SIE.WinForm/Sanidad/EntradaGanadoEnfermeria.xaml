                                    Grid.Column="1"
                                    Width="Auto" 
                                    HorizontalAlignment="Stretch" 
                                    ShowButtonSpinner="True"
                                    MaxLength="8"
                                    BorderThickness="1"
                                    MinWidth="10"
                                    TabIndex="6" 
                                    Margin="0,2,5,2" 
                                    IsEnabled="False"/>
