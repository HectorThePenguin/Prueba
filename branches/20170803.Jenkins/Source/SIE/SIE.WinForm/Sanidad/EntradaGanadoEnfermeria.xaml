                          TabIndex="3" 
                          ItemsSource="{Binding}" 
                          Grid.Column="1" 
                          Grid.Row="3"  
                          Height="Auto" 
                          Margin="0,2,30,2"
                          SelectionChanged="cboSexo_SelectionChanged"
                          />
                <Image x:Name="imgCambiarSexo"
