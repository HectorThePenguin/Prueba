                                              Checked="checkTratamiento_checked" 
                                              Unchecked="checkTratamiento_unchecked"
                                              HorizontalAlignment="Center" >

                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </GroupBox >

