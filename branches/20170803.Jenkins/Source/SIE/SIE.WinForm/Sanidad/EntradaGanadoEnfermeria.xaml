                  VerticalAlignment="Top" 
                  Width="Auto" 
                  Grid.Column="1" FontFamily="Arial Narrow">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="180*"/>
   
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="207*"/>
                </Grid.ColumnDefinitions>
                <Label
                       Content="*"
                       x:Name="lblDetectorRequerido"
                       Style="{StaticResource labelRequerido}" Margin="-6,6,6,31" />
                <Label Name="lblDetector" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDeteccionDetector}"   
                       Grid.Column="0" 
                       Grid.Row="0" Height="Auto" Margin="0,10,0,0" />
                <ComboBox Name="cboDetector"  
