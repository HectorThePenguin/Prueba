                                            Width="60*"/>

                        <DataGridTextColumn Header="{x:Static resx:Resources.EntradaGanadoEnfermeria_HeaderMedicamentoDescripcion}" 
                                            Binding="{Binding ProductoDescripcion}" 
                                            Width="150*"/>
                        
                        <DataGridTemplateColumn  Header="{x:Static resx:Resources.CorteGanado_Grid_ColumnaOpcion}"  
