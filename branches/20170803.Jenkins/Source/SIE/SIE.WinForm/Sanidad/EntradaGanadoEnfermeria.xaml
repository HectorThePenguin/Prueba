                         FocusableChanged="txtAreteTestigo_FocusableChanged" 
                         PreviewTextInput="txtAreteTestigo_PreviewTextInput" KeyDown="txtAreteTestigo_KeyDown"
                           />
                <Label Grid.Row="3"
                       Grid.Column="0"
                       Content="*"
                       x:Name="LblSexoRequerido"
                       Style="{StaticResource labelRequerido}" 
                       Margin="-6,2,6,0" 
