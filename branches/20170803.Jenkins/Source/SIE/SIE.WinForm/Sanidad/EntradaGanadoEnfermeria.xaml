                <Label Name="lblAreteTestigo" 
                       Content="{x:Static resx:Resources.EntradaGanadoEnfermeria_GrupoDatosGeneralesAreteMetalico}" 
                       Grid.Column="0" 
                       Grid.Row="2" 
                       Grid.ColumnSpan="2" Height="Auto" Margin="0,1"/>
