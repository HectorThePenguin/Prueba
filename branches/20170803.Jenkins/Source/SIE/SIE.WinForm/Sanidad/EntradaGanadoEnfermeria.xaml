                         MaxLength="15" 
                         TabIndex="2" 
                         Grid.Column="1" 
                         Grid.Row="2" 
                         Width="Auto" 
                         HorizontalAlignment="Stretch" 
                         Height="Auto" 
                         Margin="0,4,5,3" 
