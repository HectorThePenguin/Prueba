                        <ColumnDefinition Width="9*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Name="ckbCronico" 
                          TabIndex="17"  
                          Grid.Column="0" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Center" Checked="ckbCronico_Checked" Unchecked="ckbCronico_Unchecked"
                           />
                    <Label Grid.Column="0"
