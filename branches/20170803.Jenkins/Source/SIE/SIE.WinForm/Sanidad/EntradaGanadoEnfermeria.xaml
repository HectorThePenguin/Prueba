                          Margin="0,2,5,2"
                          FontFamily="Arial Narrow" 
                          Height="Auto"
                          SelectionChanged="cboGrado_SelectionChanged"/>
                <Label
                       Content="*"
                       Grid.Column="0"
                       x:Name="lblPesoRequerido"
                       Grid.Row="2"
                       Style="{StaticResource labelRequerido}" Margin="-6,5,6,0" />
